<!DOCTYPE html>
<html>
<head>
    <title>Weather App</title>
    <!-- Link to the external CSS file -->
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Heading for the weather app -->
    <h1>Check to see if there will be showers or sunset in your City</h1>
    <!-- Form to input city and date -->
    <form action="/weather" method="post">
        <!-- Label and input field for city -->
        <label for="city">City:</label>
        <input type="text" id="city" name="city" placeholder="Enter city">
        
        <!-- Label and input field for date -->
        <label for="date">Date:</label>
        <input type="date" id="date" name="date">

        <!-- Submit button to submit the form -->
        <button type="submit">Check</button>
    </form>
    
    <!-- Condition to display if it will rain -->
    <% if (typeof willRain !== 'undefined') { %>
        <p><%= willRain ? 'It will rain on ' + date + ' in ' + city + '.' : 'It will not rain on ' + date + ' in ' + city + '.' %></p>
    <% } %>

    <!-- Condition to display if there will be a sunset -->
    <% if (typeof sunset !== 'undefined') { %>
        <p><%= sunset ? 'There will be a sunset on ' + date + ' in ' + city + '.' : 'There will not be a sunset on ' + date + ' in ' + city + '.' %></p>
    <% } %>

    <!-- Condition to display error message if any -->
    <% if (typeof error !== 'undefined') { %>
        <p><%= error %></p>
    <% } %>
</body>
</html>
